{
  "name": "properaccount",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "lint": "astro check && eslint . --ext .js,.ts,.astro",
    "format": "prettier --write . --plugin=prettier-plugin-astro",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "pages:deploy:production": "npm run build && wrangler pages deploy ./dist --project-name=properaccount --branch=main",
    "pages:dev": "wrangler pages dev ./dist --compatibility-date=2025-05-18 --kv=CONFIG_KV --d1=DATABASE --r2=DOCUMENTS_BUCKET --queue=BACKGROUND_TASKS_QUEUE"
  },
  "dependencies": {
    "@astrojs/alpinejs": "^0.4.8",
    "@astrojs/check": "^0.9.4",
    "@astrojs/cloudflare": "^12.5.3",
    "@auth/core": "^0.39.1",
    "@auth/d1-adapter": "^1.9.1",
    "alpinejs": "^3.14.9",
    "drizzle-orm": "^0.43.1",
    "htmx.org": "^1.9.12",
    "typescript": "^5.8.3",
    "zod": "^3.25.3"
  },
  "devDependencies": {
    "@iconify-json/carbon": "^1.2.8",
    "@playwright/test": "^1.52.0",
    "@types/alpinejs": "^3.13.11",
    "@types/node": "^22.15.19",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@unocss/astro": "^66.1.2",
    "@unocss/reset": "^66.1.2",
    "@unocss/vite": "^66.1.2",
    "astro": "^5.7.13",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.27.0",
    "eslint-plugin-astro": "^1.3.1",
    "playwright": "^1.52.0",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "unocss": "^66.1.2",
    "wrangler": "^4.15.2"
  },
  "overrides": {
    "@esbuild-kit/core-utils": {
      "esbuild": "^0.25.0"
    }
  }
}
