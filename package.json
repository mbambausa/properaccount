{
  "name": "properaccount",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "npm run check:env && astro dev",
    "build": "npm run check:env && npm run mojo:build && astro build && npm run analyze",
    "preview": "astro preview",
    "astro": "astro",
    "test": "playwright test",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch",
    "test:ui": "playwright test --ui",
    "test:all": "npm run test:unit && npm run test",
    "lint": "astro check && eslint . --ext .js,.ts,.astro",
    "format": "prettier --write . --plugin=prettier-plugin-astro",
    "format:check": "prettier --check . --plugin=prettier-plugin-astro",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:local": "npx wrangler d1 migrations apply DATABASE --local",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "db:seed": "node scripts/seed-db.js",
    "db:reset": "npm run db:rollback && npm run db:migrate:local && npm run db:seed",
    "db:rollback": "node scripts/migrate-rollback.js",
    "pages:deploy:production": "npm run build && wrangler pages deploy ./dist --project-name=properaccount --branch=main",
    "pages:dev": "wrangler pages dev ./dist --compatibility-date=2025-05-18 --kv=CONFIG_KV --kv=REPORT_CACHE_KV --kv=SESSION_KV --d1=DATABASE --r2=DOCUMENTS_BUCKET",
    "type-check": "tsc --noEmit",
    "check:types": "tsc --noEmit && astro check",
    "check:all": "npm run check:env && npm run check:types && npm run lint",
    "mojo:build": "node scripts/build-mojo.js",
    "backup": "node scripts/backup-db.js",
    "restore": "node scripts/restore-db.js",
    "setup": "node scripts/setup.js",
    "check:env": "node scripts/check-env.js",
    "clean": "node scripts/clean.js",
    "generate-types": "tsx scripts/generate-types.js",
    "analyze": "node scripts/analyze-bundle.js",
    "analyze:deps": "npx depcheck",
    "update:deps": "npx npm-check-updates -u",
    "size": "npm run build && du -sh dist",
    "preinstall": "node scripts/check-env.js"
  },
  "dependencies": {
    "@astrojs/alpinejs": "^0.4.8",
    "@astrojs/check": "^0.9.4",
    "@astrojs/cloudflare": "^12.5.3",
    "@auth/core": "^0.39.1",
    "@auth/d1-adapter": "^1.9.1",
    "@node-rs/argon2": "^2.0.2",
    "alpinejs": "^3.14.9",
    "csrf-csrf": "^4.0.2",
    "d3": "^7.9.0",
    "decimal.js": "^10.5.0",
    "drizzle-orm": "^0.43.1",
    "exceljs": "^4.4.0",
    "htmx.org": "^1.9.12",
    "mathjs": "^14.5.0",
    "papaparse": "^5.4.1",
    "tesseract.js": "^6.0.1",
    "zod": "^3.25.20"
  },
  "devDependencies": {
    "@alpinejs/collapse": "^3.14.9",
    "@alpinejs/intersect": "^3.14.9",
    "@cloudflare/workers-types": "^4.20250525.0",
    "@iconify-json/carbon": "^1.2.8",
    "@libsql/client": "^0.15.7",
    "@playwright/test": "^1.52.0",
    "@types/alpinejs": "^3.13.11",
    "@types/bcryptjs": "^2.4.6",
    "@types/d3": "^7.4.3",
    "@types/node": "^22.15.21",
    "@types/papaparse": "^5.3.14",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@unocss/astro": "^66.1.2",
    "@unocss/preset-mini": "^66.1.2",
    "@unocss/reset": "^66.1.2",
    "@unocss/vite": "^66.1.2",
    "@vitest/ui": "^3.1.4",
    "astro": "^5.7.14",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.27.0",
    "eslint-plugin-astro": "^1.3.1",
    "glob": "^11.0.0",
    "happy-dom": "^17.4.7",
    "nanoid": "^5.1.5",
    "playwright": "^1.52.0",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "rimraf": "^6.0.0",
    "tsx": "^4.16.2",
    "typescript": "^5.8.3",
    "unocss": "^66.1.2",
    "vitest": "^3.1.4",
    "wrangler": "^4.16.0"
  },
  "overrides": {
    "@esbuild-kit/core-utils": {
      "esbuild": "^0.25.0"
    }
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=9.6.5"
  }
}
