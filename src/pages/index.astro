---
import BaseLayout from '@/components/layout/BaseLayout.astro';
---

<BaseLayout title="Welcome">
  <main class="min-h-screen flex items-center justify-center">
    <div class="text-center">
      <h1 class="text-4xl font-bold mb-4">Welcome to ProperAccount</h1>
      <p class="text-lg text-neutral-600 dark:text-neutral-400 mb-8">
        Professional Real Estate Accounting Made Simple
      </p>
      <div class="space-x-4">
        <a href="/auth/login" class="btn-primary">
          Login
        </a>
        <a href="/auth/register" class="btn-secondary">
          Get Started
        </a>
      </div>
    </div>
  </main>
</BaseLayout>