---
// src/pages/auth/register.astro
import AuthLayout from '@/components/layout/AuthLayout.astro';
import RegisterForm from '@/components/auth/RegisterForm.astro';

// Optionally pull values from query params (useful for redirecting back after a failed registration)
const authError = Astro.url.searchParams.get('error') || '';
const nameHint = Astro.url.searchParams.get('name') || '';
const emailHint = Astro.url.searchParams.get('email') || '';
const callbackUrl = Astro.url.searchParams.get('callbackUrl') || '/app/dashboard';
---

<AuthLayout title="Create Account" description="Create your ProperAccount to get started.">
  <RegisterForm 
    error={authError ? authError : undefined}
    nameValue={nameHint}
    emailValue={emailHint}
    callbackUrl={callbackUrl}
  />
</AuthLayout>