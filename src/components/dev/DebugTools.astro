---
// src/components/dev/DebugTools.astro
// Standardized component for initializing development tools like Eruda
// Usage: <DebugTools /> in layouts

const isDev = import.meta.env.PUBLIC_DEV_MODE === 'true';
---

{isDev && <script is:inline src="https://cdn.jsdelivr.net/npm/eruda"></script>}

{isDev && <script is:inline>
  // Initialize Eruda for mobile debugging if available
  if (typeof eruda !== 'undefined') {
    eruda.init();
  } else {
    const erudaScript = document.querySelector('script[src*="eruda"]');
    if (erudaScript) {
      erudaScript.addEventListener('load', () => {
        if (typeof eruda !== 'undefined') eruda.init();
      });
    }
  }
</script>}